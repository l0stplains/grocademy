{{> head title=title description="Register to Grocademy"}}
{{> navbar}}
<main class="container" style="max-width:820px">
  <h1>Create your account</h1>
  {{#if error}}<div class="alert error">{{error}}</div>{{/if}}

  <form method="post" action="/register" class="card" id="register-form">
    <div class="form-row two">
      <label>Email
        <input type="email" name="email" value="{{old.email}}" required>
      </label>
      <label>Username
        <input name="username" minlength="3" value="{{old.username}}" required>
      </label>
    </div>

    <div class="form-row two">
      <label>First name
        <input name="first_name" value="{{old.first_name}}" required>
      </label>
      <label>Last name
        <input name="last_name" value="{{old.last_name}}" required>
      </label>
    </div>

    <div class="form-row two">
      <label>Password
        <input type="password" name="password" minlength="8" pattern="^(?=.*[A-Za-z])(?=.*\d).+$"
          title="At least 8 characters and include letters and numbers" required aria-describedby="pwdHint">
        <small id="pwdHint" class="muted">At least 8 characters, include letters and numbers.</small>
      </label>
      <label>Confirm Password
        <input type="password" name="confirm_password" minlength="8" required aria-describedby="cpwHint">
        <small id="cpwHint" class="muted">Must match the password.</small>
      </label>
    </div>

    <button class="btn primary" type="submit">Sign up</button>
  </form>

  <p class="muted">Already have an account? <a href="/login" style="color:var(--blue)">Login</a></p>
</main>
{{> footer year="2025"}}