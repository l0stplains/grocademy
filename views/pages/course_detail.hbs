{{> head title=title description=description canonical=canonical ogImage=ogImage}}
{{> navbar user=user}}

{{#if flash}}<div class="container">
  <div class="alert success">{{flash}}</div>
</div>{{/if}}
{{#if error}}<div class="container">
  <div class="alert error">{{error}}</div>
</div>{{/if}}

<main class="container">
  <section class="page-hero">
    <div class="hero-media">
      <div class="thumb-frame">
        <div class="thumb-placeholder" aria-hidden="true"></div>
        {{#if course.thumbnail_image}}<img class="thumb-img" src="{{course.thumbnail_image}}" alt="">{{/if}}
      </div>
    </div>

    <div class="hero-body">
      <h1>{{course.title}}</h1>
      <p class="muted">Instructor: {{course.instructor}}</p>
      <p>{{course.description}}</p>
      <div class="tags">
        {{#each course.topics}} <span class="badge topic">{{this}}</span> {{/each}}
      </div>

      <div class="hero-actions">
        {{#if course.is_purchased}}
        <a class="btn primary" href="/courses/{{course.id}}/modules">Go to Modules</a>
        <a id="certificate-link" class="btn {{#unless certificate_url}}hidden{{/unless}}" href="{{certificate_url}}"
          target="_blank" rel="noopener">Download Certificate</a>
        {{else}}
        <form class="inline" method="post" action="/courses/{{course.id}}/buy">
          <button class="btn primary" type="submit">Buy for ${{course.price}}</button>
        </form>
        {{/if}}
      </div>
    </div>
  </section>
</main>

{{> footer year="2025"}}